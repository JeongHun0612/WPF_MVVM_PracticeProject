<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Border Name ="Btn_G_Board" CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" RenderingBias="Performance" Direction="315" BlurRadius="1" Opacity="0.6"/>
                            </Border.Effect>
                            
                            <Border.Background>
                                <LinearGradientBrush  Opacity="0.6">
                                    <GradientStop Offset="0" Color="{StaticResource ColorButtonUpTop}"/>
                                    <GradientStop Offset="1" Color="{StaticResource ColorButtonUpBottom}"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <TextBlock Name ="Btn_G_Text" Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Btn_G_Board" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush  Opacity="0.6">
                                        <GradientStop Offset="0" Color="{StaticResource ColorButtonHoverTop}"/>
                                        <GradientStop Offset="1" Color="{StaticResource ColorButtonHoverBottom}"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Btn_G_Board" Property="Opacity" Value="0.9"/>
                            <Setter TargetName="Btn_G_Board" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Offset="0" Color="{StaticResource ColorButtonDownTop}"/>
                                        <GradientStop Offset="1" Color="{StaticResource ColorButtonDownBottom}"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Btn_G_Text" Property="Foreground" Value="{StaticResource BrushButtonEnableFalse}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>